<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgGoogle"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/google" />

    <TextView
        android:id="@+id/txtHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgGoogle"
        android:text="Sign In"
        android:textAlignment="center"
        android:textColor="#212121"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtHead"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        android:text="with your Google Account"
        android:textColor="#212121"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etUser"
        android:layout_marginLeft="60dp"
        android:text="Forgot email?"
        android:textColor="#006064" />

    <TextView
        android:id="@+id/txtAcc"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Create account"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="#006064"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/etUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="5dp"
        android:hint="Username or Email" />

    <Button
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnNext"
        android:layout_toRightOf="@id/txtAcc"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="NEXT"
        android:textStyle="bold"
        android:background="#0091ea"
        android:textColor="#ffff"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="150dp"/>
</RelativeLayout>